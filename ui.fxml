<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.collections.FXCollections?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="TransactionsController"
      spacing="10" style="-fx-padding: 10;">

    <Label text="ðŸ’° Personal Finance Tracker"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Input fields -->
    <GridPane hgap="10" vgap="10">
        <Label text="Name of Transaction:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Amount($):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Date (mm/dd/yyyy):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="dateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Category:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ChoiceBox fx:id="categoryBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Button text="Add Transaction" fx:id="addButton" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        <Button text="Delete Selected" fx:id="deleteButton" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        <Button text="Clear All" fx:id="clearAllButton" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>

    <!-- TableView -->
    <TableView fx:id="transactionTable">
        <columns>
            <TableColumn fx:id="tidColumn" text="TID" prefWidth="60"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
            <TableColumn fx:id="amountColumn" text="Amount ($)" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100"/>
        </columns>
    </TableView>

    <Label fx:id="netAmountLabel" text="Net Balance: $0.00" style="-fx-font-weight: bold;"/>
</VBox>
